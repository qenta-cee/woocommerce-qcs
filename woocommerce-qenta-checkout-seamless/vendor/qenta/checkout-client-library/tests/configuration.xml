<phpunit bootstrap="./bootstrap.php" colors="false">
	<testsuites>
		<testsuite name="QentaCEEQMoreTestSuite">
			<directory>./QentaCEE/QMore/</directory>
		</testsuite>
		<testsuite name="QentaCEEQPayTestSuite">
			<directory>./QentaCEE/QPay/</directory>
		</testsuite>
		<testsuite name="QentaCEEStdlibTestSuite">
			<directory>./QentaCEE/Stdlib/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory suffix=".php">../library/QentaCEE</directory>
			<exclude>
			  <directory>../QentaCEE/QMore/Examples</directory>
			  <directory>../QentaCEE/QMore/Documentation</directory>
			  <directory>../QentaCEE/QPay/Examples</directory>
			  <directory>../QentaCEE/QPay/Documentation</directory>
			  <directory>../QentaCEE/Stdlib/Documentation</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-html" target="./logs/coverage" charset="UTF-8" yui="true" highlight="false" lowUpperBound="35" highLowerBound="70" />
	</logging>
</phpunit>